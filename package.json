{
  "name": "adal-node-null-cache",
  "description": "Windows Azure Active Directory Authentication with a Null Cache",
  "version": "1.0.0",
  "dependencies": {},
  "scripts": {
    "lint": "xo './!(node_modules|test)/**' *",
    "inspect": "jsinspect",
    "pretest": "npm run lint && npm run inspect && npm run pretest-peer-install",
    "pretest-cov": "npm run pretest",
    "pretest-peer-install": "node -e \"require('child_process').spawn('npm', ['i'], {cwd: 'test/peer', stdio: 'inherit'})\"",
    "test": "ava",
    "test-cov": "nyc ava",
    "test-ci": "npm run test-cov",
    "posttest-ci": "nyc report --reporter=text-lcov | coveralls"
  },
  "publishConfig": {
    "registry": "http://registry.npmjs.org"
  },
  "author": "Jordan Klassen <forivall@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "ava": "^0.16.0",
    "coveralls": "^2.11.9",
    "jsinspect": "^0.8.0",
    "mockery": "^1.7.0",
    "nyc": "^8.1.0",
    "xo": "^0.15.1"
  },
  "optionalPeerDependencies": {
    "adal-node": "^0.1.19"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:forivall/adal-node-null-cache.git"
  },
  "xo": {
    "space": 2,
    "rules": {
      "curly": [
        2,
        "multi-line",
        "consistent"
      ],
      "brace-style": [
        2,
        "1tbs",
        {
          "allowSingleLine": true
        }
      ],
      "eqeqeq": [
        2,
        "smart"
      ],
      "no-eq-null": [
        0
      ],
      "no-use-before-define": [
        1
      ]
    },
    "overrides": [
      {
        "files": "test/**",
        "esnext": true,
        "semicolon": false
      }
    ]
  }
}
